      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VerkoopVoetbalTruitjes.WPF.Pages.Dashboard"
      mc:Ignorable="d" 
      FontFamily="Microsoft Sans Serif"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardPage">

    <Grid Background="#FFC3FFF7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <TextBlock Text="Welkom in Voetbaltruitjes" FontSize="45" Margin="100,100,78,100" MinWidth="100" FontWeight="Bold" TextDecorations="Underline" FontFamily="Franklin Gothic Heavy" Foreground="#FF0C0A0B"/>
        <StackPanel Grid.Row="1" Background="PowderBlue">
            <TextBlock Name="MessageTxt" Text="" Loaded="MessageTxt_Loaded"/>
        </StackPanel>
    </Grid>
</Page>
